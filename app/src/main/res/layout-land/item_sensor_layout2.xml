<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="0dp"
        android:background="@drawable/item_border"
        android:padding="4dp"
        android:id="@+id/itemSensorEntry">

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sensor_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="288dp"
            android:layout_marginLeft="288dp"
            android:layout_marginBottom="-2dp" />


        <TextView
            android:id="@+id/sensor_name"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="52dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ToggleButton
            android:id="@+id/toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_marginStart="-248dp"
            android:layout_marginLeft="-245dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="383dp"
            android:layout_marginRight="106dp"
            android:layout_toEndOf="@+id/btn0"
            android:gravity="center"
            android:visibility="invisible" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-279dp"
            android:layout_marginLeft="-285dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="347dp"
            android:layout_marginRight="347dp"
            android:layout_marginBottom="76dp"
            android:layout_toEndOf="@+id/btn0"
            android:text=""
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>